<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:contentPadding="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imgPlayer"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <TextView
            app:layout_constraintTop_toTopOf="@id/imgPlayer"
            app:layout_constraintStart_toEndOf="@id/imgPlayer"
            app:layout_constraintBottom_toBottomOf="@id/imgPlayer"
            app:layout_constraintEnd_toStartOf="@id/tvPlayerPosition"
            android:id="@+id/tvPlayerName"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:text="Player Name"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp" />
        <TextView
            app:layout_constraintTop_toTopOf="@id/imgPlayer"
            app:layout_constraintBottom_toBottomOf="@id/imgPlayer"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvPlayerPosition"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:text="Player Position"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>