<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sennohananto.footballmatchschedule">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name=".FootballMatchSchedule"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".matches.detailMatch.DetailMatchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".matches.searchMatch.SearchMatchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".team.teamDetail.TeamDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".team.searchTeam.SearchTeamActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".team.teamDetail.players.playerDetail.PlayerDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>